<UserControl x:Class="PQM_V2.Views.HomeViews.StructuresLegendView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PQM_V2.Views.HomeViews" xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:converters="clr-namespace:PQM_V2.Converters"
             mc:Ignorable="d" 
             Background="#707070"
             d:DesignHeight="600" d:DesignWidth="400">
    <UserControl.Resources>
        <converters:InverseBooleanConverter x:Key="inverseBooleanConverter"/>
        <DataTemplate x:Key="myListViewItemTemplate">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding name}" Foreground="#ffffff" FontSize="15" Width="100" Margin="5, 0, 5, 0"/>
                <Rectangle Fill="{Binding color}" Height="10" Width="30" Margin="5, 0, 5, 0"/>
                <fa:ImageAwesome Grid.Column="2" Foreground="#cccccc" 
                                 Margin="5, 0, 5, 0"
                                 Height="20px" Icon="Eye" Visibility="{Binding eye}" Width="20px"/>
                <fa:ImageAwesome Grid.Column="3" Foreground="#cccccc" 
                                 Margin="5, 0, 5, 0"
                                 Height="20px" Icon="EyeSlash" Visibility="{Binding eyeSlash}" Width="20px"/>
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>
    <Grid>
        <ListView ItemTemplate="{DynamicResource myListViewItemTemplate}" 
                  Style="{DynamicResource myListViewStyle}" Background="#707070" 
                  ItemsSource="{Binding LegendItemsList}">
            <ListView.ContextMenu>
                    <ContextMenu Placement="MousePoint">
                        <MenuItem Header="Show"/>
                        <MenuItem Header="Hide"/>
                        <MenuItem Header="Isolate"/>
                        <MenuItem Header="Delete"/>
                        <MenuItem Header="Select"/>
                    </ContextMenu>
            </ListView.ContextMenu>
        </ListView>
    </Grid>
</UserControl>
